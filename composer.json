{
    "name": "robinsartini/symfony-pipeline",
    "description": "Un projet Symfony pour CI/CD avec Jenkins",
    "type": "project",
    "require": {
        "php": "^8.0",
        "symfony/framework-bundle": "^6.0",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/yaml": "^6.0",
        "symfony/flex": "^2.0",
        "doctrine/orm": "^2.11", 
        "symfony/maker-bundle": "^1.36",
        "symfony/security-bundle": "^6.0", 
        "symfony/twig-bundle": "^6.0" 
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5", 
        "symfony/test-pack": "^1.0",
        "symfony/profiler-pack": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/console cache:clear",
            "php bin/console cache:warmup"
        ],
        "post-update-cmd": [
            "php bin/console cache:clear",
            "php bin/console cache:warmup"
        ],
        "test": "php bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.0.*"
        }
    }
}
